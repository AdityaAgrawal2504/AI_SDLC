<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} %p %C{1.} [%t] %m%n%ex
        </Property>
        <Property name="APP_LOG_ROOT">./logs</Property>
        <Property name="APP_NAME">FMA</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender for local development -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling File Appender for structured JSON logs -->
        <RollingFile name="File"
                     fileName="${APP_LOG_ROOT}/${APP_NAME}.log"
                     filePattern="${APP_LOG_ROOT}/${APP_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- Structured JSON layout for easy parsing by log management systems -->
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}"/>
            </JsonLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Abstracted Kafka Appender (placeholder) -->
        <!--
        To enable, add the log4j-kafka appender dependency and uncomment.
        This demonstrates readiness for integration with external systems.
        <Kafka name="Kafka" topic="fma-logs">
            <PatternLayout pattern="%m" />
            <Property name="bootstrap.servers">kafka-broker1:9092,kafka-broker2:9092</Property>
        </Kafka>
        -->

        <!-- Abstracted Azure Event Hub Appender (placeholder) -->
        <!--
        To enable, use a relevant Log4j2 appender for Azure Event Hubs.
        <Http name="AzureEventHub" url="https://<namespace>.servicebus.windows.net/<hubname>/messages">
            <Property name="Authorization" value="<SAS_TOKEN>" />
            <Property name="Content-Type" value="application/atom+xml;type=entry;charset=utf-8" />
            <JsonLayout ... />
        </Http>
        -->

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <!-- <AppenderRef ref="Kafka"/> -->
            <!-- <AppenderRef ref="AzureEventHub"/> -->
        </Root>

        <Logger name="com.fetchmessagesapi.fma" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.springframework.web" level="info">
             <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
             <AppenderRef ref="Console"/>
        </Logger>

    </Loggers>
</Configuration>
