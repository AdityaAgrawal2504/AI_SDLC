<?xml version="1.0" encoding="UTF-8"?>
<!--
  This Log4j2 configuration sets up structured JSON logging to a file.
  The JSON format is defined by JsonTemplateLayout and is designed for
  easy consumption by log management systems like Splunk, ELK, or cloud-based solutions.
-->
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c{1.} - %msg%n</Property>
        <Property name="LOG_FILE_PATH">./logs</Property>
        <Property name="APP_NAME">VerifyLoginOtpApi</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender for local development -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!--
          File Appender using a JSON Template Layout for structured logging.
          This layout makes logs machine-readable, which is essential for integration
          with systems like Kafka, Azure Event Hub, or log aggregators.
        -->
        <RollingFile name="File"
                     fileName="${LOG_FILE_PATH}/${APP_NAME}.log"
                     filePattern="${LOG_FILE_PATH}/${APP_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <JsonTemplateLayout eventTemplateUri="classpath:log4j2-json-template.json" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- Set specific package log levels if needed -->
        <Logger name="com.example.verifyloginotpapi" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.springframework.web" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>

//- FILE: src/main/resources/log4j2-json-template.json
{
  "timestamp": {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
      "timeZone": "UTC"
    }
  },
  "level": {
    "$resolver": "level",
    "field": "name"
  },
  "service": "VerifyLoginOtpApi",
  "thread": {
    "$resolver": "thread",
    "field": "name"
  },
  "logger": {
    "$resolver": "logger",
    "field": "name"
  },
  "message": {
    "$resolver": "message",
    "stringified": true
  },
  "context": {
    "$resolver": "mdc"
  },
  "exception": {
    "$resolver": "exception",
    "stackTrace": {
      "stringified": true
    }
  }
}

